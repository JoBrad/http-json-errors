  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run the app",
      "program": "${workspaceFolder}/build/index.js",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/lib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug a file",
      "program": "${file}",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/lib/**/*.js"
      ],
      "stopOnEntry": true
    }
  ]
}